            <HBox.margin>
                <Insets top="50.0" />
            </HBox.margin>
        </Button>
        <Button maxWidth="Infinity" text="Info" HBox.hgrow="ALWAYS">
            <HBox.margin>
                <Insets top="50.0" />
            </HBox.margin>
        </Button>
    </HBox>

    <VBox alignment="CENTER" layoutX="140.0" layoutY="190.0" spacing="10" style="-fx-font-size: 16px;">
        <Label text="Please choose one of the options below" underline="true" />

        <HBox alignment="CENTER" spacing="20">
            <Label text="Take away" />
            <Label text="Dine in" />
        </HBox>

        <HBox alignment="CENTER" spacing="20">
            <Button minWidth="120" text="Order Take Away" />
            <Button minWidth="120" prefHeight="0.0" prefWidth="133.0" text="Book for Dine In" />
