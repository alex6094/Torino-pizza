<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="TableReservation">

    <HBox prefHeight="100.0" prefWidth="200.0" style="-fx-background-color: white;" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
        <Button maxWidth="Infinity" text="Home" HBox.hgrow="ALWAYS">
            <HBox.margin>
                <Insets top="50.0" />
            </HBox.margin>
        </Button>
        <Button alignment="CENTER" contentDisplay="BOTTOM" maxWidth="Infinity" text="Order Online" HBox.hgrow="ALWAYS">
            <HBox.margin>
                <Insets top="50.0" />
            </HBox.margin>
        </Button>
        <Button maxWidth="Infinity" text="Info" HBox.hgrow="ALWAYS">
            <HBox.margin>
                <Insets top="50.0" />
            </HBox.margin>
        </Button>
    </HBox>
    <VBox alignment="CENTER" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="100.0">
        <Label style="-fx-font-size: 16px;" text="Table reservation" underline="true" />

        <Pane minHeight="10.0" VBox.vgrow="NEVER" />

        <VBox alignment="CENTER" spacing="10" style="-fx-font-size: 16px;">
            <HBox alignment="CENTER" spacing="5">
                <Label text="Name:" />
                <TextField fx:id="nameField" promptText="Enter name" />
            </HBox>
            <HBox alignment="CENTER" spacing="5">
                <Label text="Time of arrival:" />
                <TextField fx:id="arrivalTimeField" promptText="Enter arrival time" />
            </HBox>
            <HBox alignment="CENTER" spacing="5">
                <Label text="Number of people:" />
                <TextField fx:id="numberOfPeopleField" promptText="Enter number of people" />
            </HBox>
            <HBox alignment="CENTER" spacing="5">
                <Label text="Email:" />
                <TextField fx:id="emailField" promptText="Enter email" />
            </HBox>
        </VBox>

        <Pane minHeight="10.0" VBox.vgrow="NEVER" />
        <Label style="-fx-font-size: 16px;" text="Special requests?" VBox.vgrow="ALWAYS" />

        <TextField maxWidth="300.0" prefHeight="100.0" prefWidth="300.0" promptText="Im allergic to air" />

        <Pane minHeight="10.0" VBox.vgrow="NEVER" />

        <Button maxWidth="200.0" text="Send" />
    </VBox>



</AnchorPane>
